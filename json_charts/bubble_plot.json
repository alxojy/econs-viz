{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A bubbleplot showing countries, years, and urbanisation on continent.",
  "width": "container",
  "height": 300,
  "title": ["Urban Population of Countries by GDP and Continent","__________________________________________________________________"],
  "data": {
    "url": "https://alxojy.github.io/econs-viz/data/urbanisation.csv"
  },
  "layer": [{
    "mark": "circle",
    "encoding": {
      "x": {
        "field": "GDP",
        "type": "quantitative"
      },
      "y": {
        "field": "Urban population (%)",
        "type": "quantitative"
      },
      "color": {
        "field": "Continent",
        "type": "nominal"
      }, 
      "size": {
        "field": "Population", 
        "type": "quantitative",
        "scale": {"rangeMax": 1500, "rangeMin": 50}, 
        "legend": null
      }, 
      "tooltip" : [
        {"field": "Country", "type": "nominal"},
        {"field": "GDP", "type": "quantitative"},
        {"field": "Urban population (%)", "type": "quantitative"}, 
        {"field": "Population", "type": "quantitative"}
      ]
    }
  }],
  "transform": [
    {"filter": {"field":"Year", "equal": "2016"}}
  ],
  "config": {

    "axis": {"labelFont": "Open Sans", "titleFont": "Open Sans",
      "labelFontSize": 12},
    "header": {"labelFont": "Open Sans", "titleFont": "Open Sans",
      "labelFontSize": 12},
    "mark": {"font": "Open Sans",
      "fontSize": 12},
      "legend": {
        "labelFont": "Open Sans"
      },
      "title": {
        "font": "Open Sans",
        "fontSize": 16,
        "color": "#00441b"
      },
      "concat": {
        "spacing":30
      },
      "style": {
        "cell": {
          "stroke": "transparent"
        }
      },
      "text": {
        "baseline": "bottom",
        "align": "center",
        "fontWeight": "bold",
        "font": "Open Sans"
      },
    "background": "#eeeae4"
  }
}

