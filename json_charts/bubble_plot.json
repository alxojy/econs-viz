{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A bubbleplot showing countries, years, and urbanisation on continent.",
  "width": "container",
  "height": 300,
  "data": {
    "url": "https://alxojy.github.io/econs-viz/data/urbanisation.csv"
  },
  "layer": [{
    "mark": "circle",
    "encoding": {
      "x": {
        "field": "GDP",
        "type": "quantitative"
      },
      "y": {
        "field": "Urban population (%)",
        "type": "quantitative"
      },
      "color": {
        "field": "Continent",
        "type": "nominal"
      }, 
      "size": {
        "field": "Population", 
        "type": "quantitative",
        "scale": {"rangeMax": 1500, "rangeMin": 50}, 
        "legend": null
      }
    }
  }, {
    "mark": {
      "type": "text"
    },
    "encoding": {
      "y": {
        "field": "Urban population (%)",
        "type": "quantitative"
      },
      "x": {
        "field": "GDP",
        "type": "quantitative"
      },
      "text": {"field": "Country", "type": "nominal"}
    }
  }],
  "transform": [
    {"filter": {"field":"Year", "equal": "2016"}}
  ],
  "config": {
    "background": "#F2F3F4"
  }
}
