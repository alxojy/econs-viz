{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "description": "Waterfall chart",
  "padding": 5,
  "hconcat": [
    {
      "title": {
        "text": [
          "GDP per Capita (2016)",
          "__________________________________________________________________"
        ]
      },
      "width": "container",
      "height": 460,
      "data": {
        "url": "https://alxojy.github.io/econs-viz/data/world_map.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://alxojy.github.io/econs-viz/data/gdp.csv"
            },
            "key": "Country",
            "fields": [
              "GDP",
              "Year",
              "Country"
            ]
          }
        },
        {
          "calculate": "datum.GDP",
          "as": "GDP"
        }
      ],
      "layer": [
        {
          "selection": {
            "country": {
              "type": "multi",
              "init": {
                "Country": "Russia"
              },
              "fields": [
                "Country"
              ],
              "on": "click",
              "resolve": "global",
              "empty": "none"
            },
            "highlight": {
              "type": "single",
              "empty": "none",
              "on": "mouseover"
            }
          },
          "projection": {
            "type": "equirectangular"
          },
          "mark": {
            "type": "geoshape",
            "strokeWidth": 0.6,
            "stroke": "#003735"
          },
          "encoding": {
            "color": {
              "condition": [
                {
                  "selection": "country",
                  "value": "white"
                },
                {
                  "test": "datum.GDP < 1",
                  "value": "#D3D3D3"
                },
                {
                  "selection": "highlight",
                  "value": "white"
                }
              ],
              "field": "GDP",
              "type": "quantitative",
              "scale": {
                "range": [
                  "#9AEEE5",
                  "#8AD8D2",
                  "#7CC1BE",
                  "#70AFAD",
                  "#669F9D",
                  "#548482",
                  "#466F6E"
                ],
                "type": "bin-ordinal",
                "domain": [
                  1000,
                  5000,
                  10000,
                  20000,
                  30000,
                  40000,
                  50000
                ]
              }
            },
            "tooltip": [
              {
                "field": "Country",
                "type": "nominal"
              },
              {
                "field": "GDP",
                "type": "quantitative"
              }
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "fontSize": 16,
            "dy": -200,
            "color": "#3F605A"
          },
          "encoding": {
            "text": {
              "condition": {
                "selection": "country",
                "field": "Country",
                "type": "nominal"
              }
            }
          }
        }
      ]
    },
    {
      "vconcat": [
        {
          "height": 120,
          "title": {
            "text": [
              "GDP per year",
              "___________________"
            ],
            "offset": 10
          },
          "data": {
            "url": "https://alxojy.github.io/econs-viz/data/gdp.csv"
          },
          "transform": [
            {
              "filter": {
                "selection": "country"
              }
            }
          ],
          "mark": {
            "type": "area",
            "line": {
              "color": "#fc8d59"
            },
            "color": {
              "x1": 1,
              "y1": 1,
              "x2": 1,
              "y2": 0,
              "gradient": "linear",
              "stops": [
                {
                  "offset": 0,
                  "color": "white"
                },
                {
                  "offset": 1,
                  "color": "#fc8d59"
                }
              ]
            }
          },
          "encoding": {
            "x": {
              "field": "Year",
              "type": "ordinal"
            },
            "y": {
              "field": "GDP",
              "type": "quantitative"
            }
          }
        },
        {
          "height": 140,
          "data": {
            "url": "https://alxojy.github.io/econs-viz/data/life_satisfaction.csv"
          },
          "title": {
            "text": [
              "Life Satisfaction",
              "___________________"
            ]
          },
          "encoding": {
            "x": {
              "field": "Year",
              "type": "nominal"
            },
            "y": {
              "field": "start",
              "type": "quantitative",
              "axis": {
                "title": "Life Satisfaction (Centril Ladder)"
              }
            },
            "y2": {
              "field": "end",
              "type": "quantitative"
            }
          },
          "layer": [
            {
              "mark": "bar",
              "encoding": {
                "color": {
                  "field": "cat",
                  "type": "ordinal",
                  "legend": {
                    "title": "",
                    "orient": "bottom"
                  },
                  "scale": {
                    "domain": [
                      "increase",
                      "decrease"
                    ],
                    "range": [
                      "#7CC1BE",
                      "#fc8d59"
                    ]
                  }
                }
              },
              "transform": [
                {
                  "filter": {
                    "selection": "country"
                  }
                }
              ]
            },
            {
              "mark": "text",
              "encoding": {
                "y": {
                  "scale": {
                    "domain": [
                      0,
                      10
                    ]
                  },
                  "field": "end",
                  "type": "quantitative"
                },
                "text": {
                  "format": ".2f",
                  "condition": {
                    "test": "datum['cat'] == 'total'",
                    "field": "start"
                  },
                  "field": "end",
                  "type": "nominal"
                },
                "color": {
                  "condition": {
                    "test": "datum['cat'] != 'increase'",
                    "value": "#543005"
                  },
                  "value": "#466F6E"
                }
              },
              "transform": [
                {
                  "filter": {
                    "selection": "country"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFont": "Open Sans",
      "titleFont": "Open Sans",
      "labelFontSize": 12
    },
    "header": {
      "labelFont": "Open Sans",
      "titleFont": "Open Sans",
      "labelFontSize": 12
    },
    "mark": {
      "font": "Open Sans",
      "fontSize": 12
    },
    "legend": {
      "labelFont": "Open Sans"
    },
    "title": {
      "font": "Open Sans",
      "fontSize": 16,
      "color": "#293E3A"
    },
    "concat": {
      "spacing": 20
    },
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    },
    "text": {
      "baseline": "bottom",
      "align": "center",
      "fontWeight": "bold",
      "font": "Open Sans"
    },
    "background": "#eeeae4"
  }
}
