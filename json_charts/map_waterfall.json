
{
  "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
  "description": "Waterfall chart",
  "padding": 5,
  "hconcat": [
    {
      "title": {"text":  ["GDP per Capita","__________________________________________________________________"]},
      "width": 800,
      "height": 330,
      "data": {
        "url": "https://alxojy.github.io/econs-viz/data/world_map.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://alxojy.github.io/econs-viz/data/gdp.csv"
            },
            "key": "Country",
            "fields": [
              "GDP",
              "Year",
              "Country"
            ]
          }
        },
        {
          "calculate": "datum.GDP",
          "as": "GDP"
        }
      ],
      "layer": [
        {
          "selection": {
            "country": {
              "type": "multi",
              "init": {
                "Country": "Russia"
              },
              "fields": [
                "Country"
              ],
              "on": "click",
              "resolve": "global",
              "empty": "none"
            }
          },
          "projection": {
            "type": "equirectangular"
          },
          "mark": {
            "type": "geoshape",
            "stroke": "#757575",
            "strokeWidth": 0.8
          },
          "encoding": {
            "color": {
              "condition": [
                {"selection": "country",
                "value": "white"},
                {
                "test": "datum.GDP < 1",
                "value": "#D3D3D3"
                }
              ],
              "field": "GDP",
              "type": "quantitative",
              "scale": {
                "range": ["#d6ffeb","#94d6b5","#7dc7a2","#4da87b","#2f9965","#14824d","#00441b"],
                "type": "bin-ordinal",
                "domain": [
                  1000,
                  5000,
                  10000,
                  20000,
                  30000,
                  40000,
                  50000
                ]
              }
            },
            "tooltip": [
              {
                "field": "Country",
                "type": "nominal"
              },
              {
                "field": "GDP",
                "type": "quantitative"
              }
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "fontSize": 16,
            "dy": -180,
            "color": "#006d2c"
          },
          "encoding": {
            "text": {
              "condition": {
                "selection": "country",
                "field": "Country",
                "type": "nominal"
              }
            }
          }
        }
      ]
    },
    {
      "vconcat": [
        {"height": 100,
        "width": 250,
          "title": {"text": ["GDP per year","___________________"], "offset": 10},
          "data": {
            "url": "https://alxojy.github.io/econs-viz/data/gdp.csv"
          },
          "transform": [
            {
              "filter": {
                "selection": "country"
              }
            }
          ],
          "mark": {
            "type": "area",
            "line": {
              "color": "#006d2c"
            },
            "color": {
              "x1": 1,
              "y1": 1,
              "x2": 1,
              "y2": 0,
              "gradient": "linear",
              "stops": [
                {
                  "offset": 0,
                  "color": "white"
                },
                {
                  "offset": 1,
                  "color": "#006d2c"
                }
              ]
            }
          },
          "encoding": {
            "x": {
              "field": "Year",
              "type": "ordinal"
            },
            "y": {
              "field": "GDP",
              "type": "quantitative"
            }
          }
        },
        {"height": 150,
        "width": 249,
          "data": {
            "url": "https://alxojy.github.io/econs-viz/data/life_satisfaction.csv"
          },
          "title": {"text": ["Life Satisfaction","___________________"]},
          "encoding": {
            "x": {
              "field": "Year",
              "type": "nominal"
            },
            "y": {
              "field": "start",
              "type": "quantitative",
              "axis": {
                "title": "Life Satisfaction (Centril Ladder)"
              }
            },
            "y2": {
              "field": "end",
              "type": "quantitative"
            }
          },
          "layer": [
            {
              "mark": "bar",
              "encoding": {
                "color": {
                  "field": "cat",
                  "type": "ordinal",
                  "legend": {
                    "title": "",
                    "orient": "bottom"
                  },
                  "scale": {
                    "domain": [
                      "increase",
                      "decrease"
                    ],
                    "range": [
                      "#66c2a4",
                      "#fc8d59"
                    ]
                  }
                }
              },
              "transform": [
                {
                  "filter": {
                    "selection": "country"
                  }
                }
              ]
            },
            {
              "mark": "text",
              "encoding": {
                "y": {
                  "scale": {
                    "domain": [
                      0,
                      10
                    ]
                  },
                  "field": "end",
                  "type": "quantitative"
                },
                "text": {
                  "format": ".2f",
                  "condition": {
                    "test": "datum['cat'] == 'total'",
                    "field": "start"
                  },
                  "field": "end",
                  "type": "nominal"
                },
                "color": {
                  "condition": {
                    "test": "datum['cat'] != 'increase'",
                    "value": "#543005"
                  },
                  "value": "#1B5E20"
                }
              },
              "transform": [
                {
                  "filter": {
                    "selection": "country"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "config": {
    "axis": {"labelFont": "Open Sans", "titleFont": "Open Sans",
    "labelFontSize": 12},
  "header": {"labelFont": "Open Sans", "titleFont": "Open Sans",
    "labelFontSize": 12},
  "mark": {"font": "Open Sans",
    "fontSize": 12},
    "legend": {
      "labelFont": "Open Sans"
    },
    "title": {
      "font": "Open Sans",
      "fontSize": 16,
      "color": "#00441b"
    },
    "concat": {
      "spacing":30
    },
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    },
    "text": {
      "baseline": "bottom",
      "align": "center",
      "fontWeight": "bold",
      "font": "Open Sans"
    },
    "background": "#eeeae4"
  }
}
