{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "GDP per capita",
  "width": "container",
  "height": 500,
  "data": {
    "url": "https://alxojy.github.io/econs-viz/data/world_map.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://alxojy.github.io/econs-viz/data/gdp.csv"
        },
        "key": "Country",
        "fields": ["GDP", "Year"]
      }
    },
    {"calculate": "datum.GDP-0", "as": "GDP"}
  ],
  "projection": {"type": "equirectangular"},
  "mark": {"type": "geoshape", 
    "stroke": "#757575",
    "strokeWidth": 0.5},
  "encoding": {
    "color": {
      "condition": {
        "test":"datum.GDP < 1",
        "value": "#D3D3D3"
      },
      "field": "GDP",
      "type": "quantitative",
      "scale": {"type": "threshold", "domain":[1000,5000,10000,20000,30000,40000,50000]}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "GDP", "type": "quantitative"}
    ]
  },
  "config": {
    "background": "#F2F3F4"
  }
}
